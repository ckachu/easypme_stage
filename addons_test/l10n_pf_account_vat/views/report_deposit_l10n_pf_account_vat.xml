<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_deposit">
			<link rel="stylesheet" href="/l10n_pf_account_vat/static/css/l10n_pf_account_vat_report.css"/>
			<t t-foreach="docs" t-as="o">
				<t t-call="report.external_layout">
					<div class="page">
						<!-- Tableau : Informations de l'entreprise -->						
						<table>
							<tr>
								<td width="20%">N° TAHITI</td>
								<td>: <span t-field="o.no_tahiti"/></td>
							</tr>
							<tr>
								<td>Nom/Raison sociale</td>
								<td>: <span t-field="o.company_id"/></td>
							</tr>
							<tr>
								<td>Activité exercée</td>
								<td>: <span t-field="o.company_activity"/></td>
							</tr>
							<tr>
								<td>Téléphone</td>
								<td>: <span t-field="o.company_phone"/></td>
							</tr>
							<tr>
								<td>Adresse</td>
								<td>: <span t-field="o.company_street"/> <span t-field="o.company_city"/> <span t-field="o.company_country"/></td>
							</tr>
							<tr>
								<td>Adresse mail de la société ou du représentant légal</td>
								<td>: <span t-field="o.company_email"/></td>
							</tr>
							<tr>
								<td>Boîte postale</td>
								<td>: <span t-field="o.company_zip"/> Code postale: <span t-field="o.company_bp"/></td>
								<td>Commune: <span t-field="o.city_zip"/></td>
							</tr>
						</table>
						<br/>
						
						<!-- Tableau : TVA Exigible -->
						<table>
							<thead>
								<tr>
									<th>A - TVA EXIGIBLE</th>
								</tr>
								<tr>
									<th>Chiffre d'affaires (Hors TVA)</th>
									<th>Coefficient de l'entreprise</th>
									<th>Taxe due</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>01</td>
									<td>Ventes</td>
									<td><span t-field="o.excluding_vat_sales"/></td>
									<td>X</td>
									<td>5%</td>
									<td>03</td>
									<td><span t-field="o.tax_due_sales"/></td>
								</tr>
								<tr>
									<td>02</td>
									<td>Prestations de services</td>
									<td><span t-field="o.excluding_vat_services"/></td>
									<td>X</td>
									<td>5%</td>
									<td>04</td>
									<td><span t-field="o.tax_due_services"/></td>
								</tr>
								<tr>
									<td>05</td>
									<td>Total (lignes 03 + 04)</td>
									<td><span t-field="o.total_tax_payable"/></td>
								</tr>
							</tbody>
						</table>
						<br/>
						
						<!-- Tableau : TVA Deductible -->
						<table>
							<tr>
								<th>B - TVA DEDUCTIBLE</th>
							</tr>
							<tr>
								<td>06</td>
								<td>TVA sur biens constituant des immobilisations</td>
								<td><span t-field="o.vat_immobilization"/></td>
							</tr>
							<tr>
								<td>07</td>
								<td>Crédit apparaissant sur la précédente déclaration</td>
								<td><span t-field="o.defferal_credit"/></td>
							</tr>
							<tr>
								<td>Indiquer ici le pourcentage de déduction applicable pour la période</td>
								<td>...... %</td>
								<td></td>
							</tr>
							<tr>
								<td>08</td>
								<td>Total (lignes 06 + 07)</td>
								<td><span t-field="o.total_vat_deductible"/></td>
							</tr>
						</table>
						<br/>
						
						<!-- Tableau : Credit et TVA -->
						<table>
							<tr>
								<th>C-CREDIT</th>
								<th>D-TVA à PAYER</th>
							</tr>
							<tr>
								<td>09</td>
								<td>CREDIT DE TVA (lignes 08 - 05)</td>
								<td><span t-field="o.vat_credit"/></td>
								<td>11</td>
								<td>TVA nette due (lignes 05 - 08)</td>
								<td><span t-field="o.net_vat_due"/> FCP</td>
							</tr>
							<tr>
								<td>10</td>
								<td>Remboursement demandé (Demande de remboursement ci-jointe)</td>
								<td>DATE ET SIGNATURE</td>
							</tr>
						</table>
						
						<table>
							<tr>
								<td>A <span t-field="o.place"/>,</td>
								<td>le <span t-field="o.date"/></td>
							</tr>
						</table>
						<br/>
						
						<form>
							<input type="checkbox" name="means of payment" value="check"> Check</input>
							<br/>
							<input type="checkbox" name="means of payment" value="cash"> Cash</input>
							<br/>
							<input type="checkbox" name="means of payment" value="transfert"> Transfert</input>
						</form>
						<br/>
						
						<table class="tab_administration">
							<thead>
								<tr>
									<th>Cadre réservé à l'administration</th>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
						
					</div>	
				</t>
			</t>
		</template>
	</data>
</openerp>

