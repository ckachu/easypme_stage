<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="survey.survey" id="appraisal_polymtl_form">
			<field name="title">Mid internship evaluation sheet (Supervisor version)</field>
			<field name="stage_id" ref="survey.stage_permanent"/>
			<field name="res_model">hr_evaluation</field>
			<field name="auth_required" eval="True"/>
			<field name="users_can_go_back" eval="True"/>
			<field name="description">&lt;p&gt; &lt;/p&gt;</field>
			<field name="thank_you_message">&lt;p&gt; &lt;/p&gt;</field>
		</record>
		
		<!-- Page 1 -->
		<record model="survey.page" id="appraisal_polymtl_1">
			<field name="title">Mid internship evaluation sheet (Supervisor version)</field>
			<field name="survey_id" ref="appraisal_polymtl_form"/>
			<field name="sequence">1</field>
			<field name="description">&lt;h2&gt;Polytechnique Montreal&lt;/h2&gt;
			&lt;ul&gt; &lt;li&gt; The objective of this evaluation is to give the student intern concrete feedback 
			on his/her performance so that he/she can apply it in the new workplace, and on ways to improve, if any.&lt;/li&gt;
			&lt;li&gt;Following discussion with the intern, please provide him/her with a copy.&lt;/li&gt; &lt;/ul&gt;
			</field>
		</record>
		<record model="survey.question" id="appraisal_polymtl_1_1">
			<field name="page_id" ref="appraisal_polymtl_1"/>
			<field name="sequence">1</field>
			<field name="question">Intern's name</field>
			<field name="type">textbox</field>
			<field name="constr_mandatory" eval="True"/>
		</record>

		<record model="survey.question" id="appraisal_polymtl_1_2">
			<field name="page_id" ref="appraisal_polymtl_1"/>
			<field name="sequence">2</field>
			<field name="question">School ID</field>
			<field name="type">textbox</field>
			<field name="constr_mandatory" eval="True"/>
		</record>

		<record model="survey.question" id="appraisal_polymtl_1_3">
			<field name="page_id" ref="appraisal_polymtl_1"/>
			<field name="sequence">3</field>
			<field name="question">Company name</field>
			<field name="type">textbox</field>
			<field name="constr_mandatory" eval="True"/>
