<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="varuacrewz_assets_frontend" name="varuacrew_profile assets_frontend" inherit_id="website.assets_frontend">
			<xpath expr="." position="inside">
				<link rel='stylesheet' href='/varuacrewz_profile/static/src/css/varuacrewz_profile.css'/>
			</xpath>	
		</template>
		
		<template id="variants_varuacrewz" inherit_id="website_sale.variants">
			<xpath expr="//li[@t-foreach='variant_id.value_ids']" position="replace">
				<li t-foreach="variant_id.value_ids" t-as="value_id" style="margin-left: -10px">
					<label t-attf-style="background-color:#{value_id.color or value_id.name}"
						t-attf-class="css_attribute_color #{'active' if not inc else ''}">
							<input type="radio" class="js_variant_change"
								t-att-checked="'checked' if not inc else ''"
								t-att-name="'attribute-%s-%s' % (product.id, variant_id.attribute_id.id)"
								t-att-value="value_id.id"
								t-att-title="value_id.name"/>
					</label>
					<t t-set="inc" t-value="inc+1"/>
				</li>
			</xpath>
		</template>
	</data>
</openerp>
