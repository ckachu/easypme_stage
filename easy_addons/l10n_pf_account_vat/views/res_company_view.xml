<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="view_company_inherit_vat_form">
			<field name="name">res.company.form.vat.inherit</field>
			<field name="inherit_id" ref="base.view_company_form"/>
			<field name="model">res.company</field>
			<field name="arch" type="xml">
				<xpath expr="/form/sheet/notebook/page[1]/group/group[1]/div[1]" position="after">
					<field name="bp"/>
					<field name="city_zip"/>
				</xpath>
				<notebook position="inside">
					<page string="Informations TVA" position="inside">
						<separator string="Informations sur l'entreprise"/>
						<group>
							<div>
								<div>
									<div>
										<label for="activity" string="Company activity"/>
										<field name="activity" string="Company activity" placeholder="Activity"
											help='Saisir l activité exercée par l entreprise'/>
									</div>
									<div>
										<label for="regime_vat" string="VAT Company regime"/>	
										<field name="regime_vat" string="Regime VAT" on_change="on_change_regime_vat(regime_vat)"
											help='Choisissez le régime de l entreprise'/>
									</div>
									<div attrs="{'invisible':[('regime_vat','=','simplified')]}">
										<label for="type_vat" string="VAT Company type"/>	
										<field name="type_vat" string="Type VAT"
											help='Choisissez le type de TVA de l entreprise'/>
									</div>
									<div attrs="{'invisible':[('regime_vat','=','simplified')]}">
										<label for="period_declaration" string="Declaration period"/>
										<field name="period_declaration" string="Declaration period"
											help='Choisissez la période de déclaration'/>
									</div>
								</div>
							</div>
						</group>
						<notebook>
							<page string="Journal">
								<separator string="Journal"/>
								<group>
									<div>
										<div>
											<label for="journal_id" string="Select journal"/>
											<field name="journal_id" help='Sélectionner le journal pour la saisie des écritures comptables'/>
										</div>
									</div>
								</group>
							</page>
							<page string="Comptes à utiliser">
								<separator string="Comptes utilisés"/>
								<group>
									<div>
										<div attrs="{'invisible':[('regime_vat','=','real')]}">
											<label for="sales_ids" string="Add all accounts for sales"/>
											<field name="sales_ids" domain="[('type','!=','view')]" widget="many2many"
												help='Choisir tous les comptes du chiffre d affaires des ventes utilisés dans le calcul de l acompte'>
												<tree>
													<field name='code'/>
													<field name='name'/>
													<field name='type'/>
												</tree>
											</field>
										</div>
										
										<div attrs="{'invisible':[('regime_vat','=','real')]}">
											<label for="services_ids" string="Add all accounts for services"/>
											<field name="services_ids" domain="[('type','!=','view')]" widget="many2many"
												help='Choisir tous les comptes du chiffre d affaires des prestations de services utilisés dans le calcul de l acompte'>
												<tree>
													<field name='code'/>
													<field name='name'/>
													<field name='type'/>
												</tree>
											</field>
										</div>
										
										<div>
											<label for="exports_ids" string="Add all accounts for exports"/>
											<field name="exports_ids" domain="[('type','!=','view')]" widget="many2many"
												help='Choisir tous les comptes pour les exportations'>
												<tree>
													<field name='code'/>
													<field name='name'/>
													<field name='type'/>
												</tree>
											</field>
												
										</div>
										
										<div>
											<label for="others_ids" string="Add all accounts for other non-taxables transactions"/>
											<field name="others_ids" domain="[('type','!=','view')]" widget="many2many"
												help='Choisir tous les comptes pour les autres opérations non taxables'>
												<tree>
													<field name='code'/>
													<field name='name'/>
													<field name='type'/>
												</tree>
											</field>
										</div>
										
										<div attrs="{'invisible':[('type_vat','=','cashing')]}">
											<label for="tax_reduced_rate_ids" string="Add all taxes for reduced rate"/>
											<field name="tax_reduced_rate_ids" domain="[('type_tax_use','!=','purchase')]" widget="many2many"
												help='Choisir toutes les taxes pour le taux réduit'>
												<tree>
													<field name='name'/>
													<field name='account_collected_id'/>
													<field name='account_paid_id'/>
												</tree>
											</field>
										</div>
										
										<div>
											<label for="tax_intermediate_rate_ids" string="Add all taxes for intermediate rate"/>
											<field name="tax_intermediate_rate_ids" domain="[('type_tax_use','!=','purchase')]" widget="many2many"
												help='Choisir toutes les taxes pour le taux intermédiaire'>
												<tree>
													<field name='name'/>
													<field name='account_collected_id'/>
													<field name='account_paid_id'/>
												</tree>
											</field>
										</div>
										
										<div attrs="{'invisible':[('type_vat','=','cashing')]}">
											<label for="tax_normal_rate_ids" string="Add all taxes for normal rate"/>
											<field name="tax_normal_rate_ids" domain="[('type_tax_use','!=','purchase')]" widget="many2many"
												help='Choisir toutes les taxes pour le taux normal'>
												<tree>
													<field name='name'/>
													<field name='account_collected_id'/>
													<field name='account_paid_id'/>
												</tree>
											</field>
										</div>
										
										<div>
											<label for="tax_immo_ids" string="Add all taxes for immobilization"/>
											<field name="tax_immo_ids" domain="[('type_tax_use','!=','sale')]" widget="many2many"
												help='Choisir toutes les taxes pour les immobilisations'>
												<tree>
													<field name='name'/>
													<field name='account_collected_id'/>
													<field name='account_paid_id'/>
												</tree>
											</field>
										</div>
										
										<div>
											<label for="tax_others_goods_services_ids" string="Add all taxes for others goods and services"/>
											<field name="tax_others_goods_services_ids" domain="[('type_tax_use','!=','sale')]" widget="many2many"
												help='Choisir toutes les taxes pour les autres biens et services'>
												<tree>
													<field name='name'/>
													<field name='account_collected_id'/>
													<field name='account_paid_id'/>
												</tree>
											</field>
										</div>
										
										<div attrs="{'invisible':['|',('regime_vat','=', 'simplified'),('type_vat','=','bills')]}">
											<label for="customers_ids" string="Add all accounts for customers"/>
											<field name="customers_ids" domain="[('type','!=','view')]" widget="many2many"
												help='Choisissez tous les comptes clients'>
												<tree>
													<field name='code'/>
													<field name='name'/>
													<field name='type'/>
												</tree>
											</field>
										</div>
										
										<div attrs="{'invisible':['|',('regime_vat','=', 'simplified'), ('type_vat','=','bills')]}">
											<label for="turnover_ids" string="Add all accounts for turnover"/>
											<field name="turnover_ids" domain="[('type','!=','view')]" widget="many2many"
												help='Choisissez tous les comptes du chiffre d affaires'>
												<tree>
													<field name='code'/>
													<field name='name'/>
													<field name='type'/>
												</tree>
											</field>
										</div>
										
										<div>
											<label for="credit_id" string="Ajouter le compte pour la saisie du crédit de TVA"/>
											<field name="credit_id" domain="[('type','!=','view')]"
												help='Choisir le compte du credit à reporter'>
												<tree>
													<field name='code'/>
													<field name='name'/>
													<field name='type'/>
												</tree>
											</field>
										</div>
										
										<div>
											<label for="vat_id" string="Ajouter le compte pour la saisie de la TVA à payer"/>
											<field name="vat_id" domain="[('type','!=','view')]"
												help='Choisir le compte pour la saisie de la TVA à payer'>
												<tree>
													<field name='code'/>
													<field name='name'/>
													<field name='type'/>
												</tree>
											</field>
										</div>
									</div>
								</group>
							</page>
						</notebook>
					</page>
				</notebook>
			</field>
		</record>
	</data>
</openerp>
