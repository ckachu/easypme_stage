<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_deposit">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<!-- Header -->
					<div class="header" style="font-family:'Times New Roman',Times,serif;">
						<table style="width:98%;margin-left:10px;">
                            <tr>
                                <td rowspan="2">
                                    <img src="/l10n_pf_account_vat/static/src/img/logo.png" style="height:100px;width:200px;"/>
                                </td>
                                <td rowspan="3"  style="text-align:center;font-size:20px;font-weight:bold;vertical-align:middle;">
                                    <span t-if="o.state == 'done'">
										TAXE SUR LA VALEUR AJOUTEE<br/>Régime simplifié<br/>
										(Déclaration d'acompte)<br/>
										à déposer au plus tard le 30 septembre de l'année
                                    </span>
                                    <span t-if="o.state != 'done'">
										TAXE SUR LA VALEUR AJOUTEE BROUILLON<br/>Régime simplifié<br/>
										(Déclaration d'acompte)<br/>
										à déposer au plus tard le 30 septembre de l'année
									</span>
                                </td>
                                <td rowspan="3" style="border:1px black solid !important;vertical-align:top !important;">
                                    <span style="margin-left:60px;font-weight:bold;">Période de déclaration</span>
                                    <br/><br/><br/>
									<span style="margin-left:15px;">
										Du <span style="margin-left:5px" t-esc="time.strftime('%d %B %Y',time.strptime(o.period_from.date_start,'%Y-%m-%d'))"/>
										au <span t-esc="time.strftime('%d %B %Y',time.strptime(o.period_to.date_stop,'%Y-%m-%d'))"/>
									</span>
                                </td>
                            </tr>
                            <tr>
                            </tr>
                            <tr>
                                <td style="text-align:center;font-weight:bold;">
                                    Recette des Impôts
                                </td>
                            </tr>
                        </table>
					</div>
					
					<div class="page" style="font-family:'Times New Roman',Times,serif;font-size:13px;">
						<!-- Tableau : Informations de l'entreprise -->						
						<table style="width:98%;margin-left:10px;">
							<tr>
								<td width="20%">N° TAHITI</td>
								<td width="30%">: <span t-field="o.ntahiti"/></td>
							</tr>
							<tr>
								<td>Nom/Raison sociale</td>
								<td>: <span t-field="o.company_id"/></td>
							</tr>
							<tr>
								<td>Activité exercée</td>
								<td>: <span t-field="o.company_activity"/></td>
							</tr>
							<tr>
								<td>Téléphone</td>
								<td>: <span t-field="o.company_phone"/></td>
							</tr>
							<tr>
								<td>Adresse</td>
								<td>: <span t-field="o.company_street"/> <span t-field="o.company_city"/></td>
							</tr>
							<tr>
								<td>Adresse mail de la société ou du représentant légal</td>
								<td>: <span t-field="o.company_email"/></td>
							</tr>
							<tr>
								<td>Boîte postale</td>
								<td>: <span t-field="o.company_bp"/> Code postal: <span t-field="o.company_zip"/></td>
								<td>Commune: <span t-field="o.city_zip"/></td>
							</tr>
						</table>
						
						<!-- Tableau : TVA Exigible -->
						<table class="table-bordered" style="width:98%;margin-left:10px">
							<thead>
								<tr style="height:25px;">
									<th colspan="7" style="text-align:center;vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">
										A - TVA EXIGIBLE
									</th>
								</tr>
								<tr style="height:35px;">
									<th colspan="3" style="text-align:center;vertical-align:middle;width:50%;border:1px black solid !important;">
										Chiffre d'affaires (Hors TVA)
									</th>
									<th colspan="3" style="text-align:center;vertical-align:middle;width:20%;border:1px black solid !important;">
										Coefficient de <br/> l'entreprise
									</th>
									<th style="text-align:center;vertical-align:middle;width:30%;border:1px black solid !important;">
										Taxe due
									</th>
								</tr>

							</thead>
							<tbody>
								<tr style="text-align:center;height:25px;">
									<td style="width:4%;vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">01</td>
									<td style="text-align:left;width:23%;vertical-align:middle;border:1px black solid !important;">
										<span style="margin-left:5px;">Ventes</span>
									</td>
									<td style="width:23%;vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.excluding_vat_sales != 0">
											<span t-esc="'{0:,.0f}'.format(o.excluding_vat_sales).replace(',', ' ')"/>
										</t>
									</td>
									<td style="width:4%;vertical-align:middle;border:1px black solid !important;">X</td>
									<td style="width:12%;vertical-align:middle;border:1px black solid !important;">5%</td>
									<td style="width:4%;vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">03</td>
									<td style="vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.tax_due_sales != 0">
											<span t-esc="'{0:,.0f}'.format(o.tax_due_sales).replace(',', ' ')"/>
										</t>
									</td>
								</tr>
								<tr style="text-align:center;height:25px;">
									<td style="vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">02</td>
									<td style="text-align:left;vertical-align:middle;border:1px black solid !important;">
										<span style="margin-left:5px;">Prestations de services</span>
									</td>
									<td style="vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.excluding_vat_services != 0">
											<span t-esc="'{0:,.0f}'.format(o.excluding_vat_services).replace(',', ' ')"/>
										</t>
									</td>
									<td style="vertical-align:middle;border:1px black solid !important;">X</td>
									<td style="vertical-align:middle;border:1px black solid !important;">5%</td>
									<td style="vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">04</td>
									<td style="vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.tax_due_services != 0">
											<span t-esc="'{0:,.0f}'.format(o.tax_due_services).replace(',', ' ')"/>
										</t>
									</td>
								</tr>
								<tr style="text-align:center;height:25px;">
									<td style="vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">05</td>
									<td colspan="4" style="text-align:right;vertical-align:middle;border:1px black solid !important;">
										<span style="margin-right:5px;"><strong>Total (lignes 03 + 04)</strong></span>
									</td>
									<td colspan="2" style="vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.total_tax_payable != 0">
											<span t-esc="'{0:,.0f}'.format(o.total_tax_payable).replace(',', ' ')"/>
										</t>
									</td>
								</tr>
							</tbody>
						</table>
						<br/>
						
						<!-- Tableau : TVA Deductible -->
						<table class="table-bordered" style="width:100%;">
							<thead>
								<tr style="height:25px;">
									<th colspan="4" style="text-align:center;vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">
										B - TVA DEDUCTIBLE
									</th>
								</tr>
							</thead>
							<tbody>
								<tr style="text-align:center;height:25px;">
									<td style="width:4%;vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">
										06
									</td>
									<td colspan="2" style="text-align:left;width:62%;vertical-align:middle;border:1px black solid !important;">
										<span style="margin-left:5px;">TVA sur biens constituant des immobilisations</span>
									</td>
									<td style="vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.vat_immobilization != 0">
											<span t-esc="'{0:,.0f}'.format(o.vat_immobilization).replace(',', ' ')"/>
										</t>
									</td>
								</tr>
								<tr style="text-align:center;height:25px;">
									<td style="vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">07</td>
									<td colspan="2" style="text-align:left;vertical-align:middle;border:1px black solid !important;">
										<span style="margin-left:5px;">Crédit apparaissant sur la précédente déclaration</span>
									</td>
									<td style="vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.defferal_credit != 0">
											<span t-esc="'{0:,.0f}'.format(o.defferal_credit).replace(',', ' ')"/>
										</t>
									</td>
								</tr>
								<tr style="text-align:center;height:25px;">
									<td colspan="2" style="text-align:left;width:54%;font-style:italic;vertical-align:middle;border:1px black solid !important;">
										<span style="margin-left:5px;">Indiquer ici le pourcentage de déduction applicable pour la période</span>
									</td>
									<td style="width:12%;vertical-align:middle;border:1px black solid !important;">...... %</td>
									<td style="vertical-align:middle;border:1px black solid !important;"></td>
								</tr>
								<tr style="text-align:center;height:25px;">
									<td style="vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">08</td>
									<td colspan="2" style="text-align:right;vertical-align:middle;border:1px black solid !important;">
										<span style="margin-right:5px;"><strong>Total (lignes 06 + 07)</strong></span>
									</td>
									<td style="vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.total_vat_deductible != 0">
											<span t-esc="'{0:,.0f}'.format(o.total_vat_deductible).replace(',', ' ')"/>
										</t>
									</td>
								</tr>
							</tbody>
						</table>
						<br/>
						
						<!-- Tableau : Credit et TVA -->
						<table class="table-bordered" style="width:100%;">
							<thead>
								<tr style="height:25px;">
									<th colspan="3" style="text-align:center;width:50%;vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">
										C-CREDIT
									</th>
									<th colspan="3" style="text-align:center;width:50%;vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">
										D-TVA à PAYER
									</th>
								</tr>
							</thead>
							<tbody>
								<tr style="text-align:center; height:40px;">
									<td style="vertical-align:middle;width:4%;background-color:#F5DA81 !important;border:1px black solid !important;">
										09
									</td>
									<th style="text-align:left;width:23%;border:1px black solid !important;">
										<span style="margin-left:5px;">CREDIT DE TVA</span>
										<br/> <span style="margin-left:5px;">(lignes 08 - 05)</span>
									</th>
									<td style="width:23%;vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.vat_credit != 0">
											<span t-esc="'{0:,.0f}'.format(o.vat_credit).replace(',', ' ')"/>
										</t>
									</td>
									<td style="vertical-align:middle;width:4%;background-color:#F5DA81 !important;border:1px black solid !important;">
										11
									</td>
									<th style="text-align:left;width:24%;border:1px black solid !important;">
										<span style="margin-left:5px;">TVA nette due</span>
										<br/> <span style="margin-left:5px;">(lignes 05 - 08)</span>
									</th>
									<td style="vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.net_vat_due != 0">
											<span t-esc="'{0:,.0f}'.format(o.net_vat_due).replace(',', ' ')"/> FCP
										</t>
									</td>
								</tr>
								<tr style="text-align:center;height:40px;">
									<td style="vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">10</td>
									<td style="text-align:left;vertical-align:middle;border:1px black solid !important;">
										<span style="margin-left:5px;">Remboursement demandé:</span>
										<br/> <span style="margin-left:5px;font-size:10px;">(Demande de remboursement ci-jointe)</span>
									</td>
									<td style="vertical-align:middle;border:1px black solid !important;">
										<t t-if="o.reimbursement != 0">
											<span t-esc="'{0:,.0f}'.format(o.reimbursement).replace(',', ' ')"/>
										</t>
									</td>
									<td colspan="3" style="vertical-align:middle;border-bottom:1px solid white !important;border-right:1px solid white !important;">
										DATE ET SIGNATURE
									</td>
								</tr>
							</tbody>
						</table>
						
						<!-- Date/Signature + Moyens de paiement -->
						<form>
							<table style="width:100%;">
								<thead>
									<tr>
										<td colspan="3" style="text-align:right;vertical-align:middle;width:54%;">A</td>
										<td style="width:24%;"><span style="margin-left:5px;" t-field="o.place"/>,</td>
										<td style="width:22%;">le <span t-field="o.date"/></td>
									</tr>
									<tr style="height:25px;">
										<th colspan="2" style="text-align:center;width:54%;text-decoration:underline;">MOYENS DE PAIEMENT</th>
										<th colspan="3" style="text-align:center;width:46%;text-decoration:underline;">
											Signature
											<div style="position: absolute; left:680px; top:580px;">
												<img t-if="o.company_id.signature" t-att-src="'data:image/png;base64,%s' % o.company_id.signature" style="max-height: 80px;"/>
											</div>
										</th>
									</tr>
								</thead>
								<tbody>
									<t t-if="not o.means_payment">
										<tr>
											<td style="width:2%;vertical-align:top;"><input type="checkbox" value="check"/></td>
											<td><span style="margin-left:10px;">Chèque (à l'ordre du Trésor Public)</span></td>
										</tr>
										<tr>
											<td style="vertical-align:top;"><input type="checkbox" value="cash"/></td>
											<td><span style="margin-left:10px;">Espèces</span></td>
										</tr>
										<tr>
											<td style="vertical-align:top;"><input type="checkbox" value="transfert"/></td>
											<td><span style="margin-left:10px;">Virement bancaire (Préciser le N° TAHITI, la taxe payée et la période</span><br/>
												<span style="margin-left:10px;">concernée sans omettre de déposer ou poster votre déclaration)</span></td>
										</tr>
									</t>
									<t t-if="o.means_payment == 'check'">
										<tr>
											<td style="width:2%;vertical-align:top;"><input type="checkbox" value="check" checked="checked"/></td>
											<td><span style="margin-left:10px;">Chèque (à l'ordre du Trésor Public)</span></td>
										</tr>
										<tr>
											<td style="vertical-align:top;"><input type="checkbox" value="cash"/></td>
											<td><span style="margin-left:10px;">Espèces</span></td>
										</tr>
										<tr>
											<td style="vertical-align:top;"><input type="checkbox" value="transfert"/></td>
											<td><span style="margin-left:10px;">Virement bancaire (Préciser le N° TAHITI, la taxe payée et la période concernée</span><br/>
												<span style="margin-left:10px;">sans omettre de déposer ou poster votre déclaration)</span></td>
										</tr>
									</t>
									<t t-if="o.means_payment == 'cash'">
										<tr>
											<td style="width:2%;vertical-align:top;"><input type="checkbox" value="check"/></td>
											<td><span style="margin-left:10px;">Chèque (à l'ordre du Trésor Public)</span></td>
										</tr>
										<tr>
											<td style="vertical-align:top;"><input type="checkbox" value="cash" checked="checked"/></td>
											<td><span style="margin-left:10px;">Espèces</span></td>
										</tr>
										<tr>
											<td style="vertical-align:top;"><input type="checkbox" value="transfert"/></td>
											<td><span style="margin-left:10px;">Virement bancaire (Préciser le N° TAHITI, la taxe payée et la période concernée</span><br/>
												<span style="margin-left:10px;">sans omettre de déposer ou poster votre déclaration)</span></td>
										</tr>
									</t>
									<t t-if="o.means_payment == 'transfert'">
										<tr>
											<td style="width:2%;vertical-align:top;"><input type="checkbox" value="check"/></td>
											<td><span style="margin-left:10px;">Chèque (à l'ordre du Trésor Public)</span></td>
										</tr>
										<tr>
											<td style="vertical-align:top;"><input type="checkbox" value="cash"/></td>
											<td><span style="margin-left:10px;">Espèces</span></td>
										</tr>
										<tr>
											<td style="vertical-align:top;"><input type="checkbox" value="transfert" checked="checked"/></td>
											<td><span style="margin-left:10px;">Virement bancaire (Préciser le N° TAHITI, la taxe payée et la période concernée</span><br/>
												<span style="margin-left:10px;">sans omettre de déposer ou poster votre déclaration)</span></td>
										</tr>
									</t>
								</tbody>
							</table>
						</form>
						<br/>
						
						<!-- Réservé à l'administration -->
						<table class="table-bordered" style="width:100%;">
							<thead>
								<tr style="height:25px;">
									<th colspan="3" style="text-align:center;vertical-align:middle;background-color:#F5DA81 !important;border:1px black solid !important;">
										Cadre réservé à l'administration
									</th>
								</tr>
							</thead>
							<tbody>
								<tr style="height:55px;">
									<td rowspan="2" style="width:33%;border:1px black solid !important;">
										<p style="margin-left:5px;text-decoration:underline;">Références comptables:</p>
										<p style="margin-left:5px;">Date <span style="margin-left:30px;">:</span> <span style="margin-left:5px;">...................</span></p>
										<p style="margin-left:5px;">N° <span style="margin-left:40px;">:</span> <span style="margin-left:5px;">...................</span></p>
										<p style="margin-left:5px;">Montant <span style="margin-left:5px;">:</span> <span style="margin-left:5px;">............................FCP</span></p>
									</td>
									<td style="width:33%;vertical-align:middle;border:1px black solid !important;">
										<span style="margin-left:5px;">N° déclaration: ............................</span>
									</td>
									<td rowspan="2" style="text-align:center;width:33%;text-decoration:underline;vertical-align:top;border:1px black solid !important;">
										Date de réception
									</td>
								</tr>
								<tr style="height:35px;">
									<td style="vertical-align:middle;border:1px black solid !important;">
										<span style="margin-left:5px;">Pénalités: ....................................</span>
									</td>
								</tr>
							</tbody>
						</table>
						<div style="font-size:12px;transform:rotate(-90deg);transform-origin:left;">
							DICP/TVARSI/1020/N020/V1/14
